# Copy to .env and adjust values. Never commit .env.
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-strong-random-secret

# Keycloak bootstrap admin (preferred for Keycloak 26+)
KC_BOOTSTRAP_ADMIN_USERNAME=admin
KC_BOOTSTRAP_ADMIN_PASSWORD=replace-with-strong-admin-password

# Optional backwards compatibility
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=replace-with-strong-admin-password

KEYCLOAK_REALM=demo
KEYCLOAK_CLIENT_ID=nextjs
KEYCLOAK_CLIENT_SECRET=replace-with-client-secret

NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_KEYCLOAK_ISSUER=http://localhost:8080/realms/demo
KEYCLOAK_ISSUER=http://localhost:8080/realms/demo
